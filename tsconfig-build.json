{
    "compilerOptions": {
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
        "es7",
        "dom"
      ],
      "module": "es2015",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "outDir": "./dist/@delon",
      "rootDir": "./dist/packages",
      "sourceMap": true,
      "target": "es5",
      "inlineSources": true,
      "stripInternal": true,
      "baseUrl": ".",
      "paths": {
        "@delon/*": ["./dist/packages/theme"],
        "@delon/abc": ["./dist/packages/abc"],
        "@delon/acl": ["./dist/packages/acl"]
      },
      "skipLibCheck": true,
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "./dist/packages/**/*"
    ],
    "files": [
      "./dist/packages/typings.d.ts"
    ],
    "exclude": [
        "./dist/packages/cli/**/*",
        "./dist/packages/**/*.e2e.ts",
      "./dist/packages/**/*.spec.ts"
    ],
    "angularCompilerOptions": {
      "preserveWhiteSpace": false,
      "skipTemplateCodegen": true,
      "strictMetadataEmit": false
    }
  }
